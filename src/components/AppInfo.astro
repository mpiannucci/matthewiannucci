---
import TextLink from "./TextLink.astro";

const { name, icon, tagline, description, links } = Astro.props;
---

<div class="flex flex-col md:flex-row py-4 space-y-4 md:space-x-4">
  {
    icon && (
      <img class="object-contain h-32 w-32 rounded-3xl" src={icon} alt={name} />
    )
  }
  <div class="flex flex-col">
    <h4 class="text-xl font-bold">{name}</h4>
    <h6 class="text-md">{tagline}</h6>
    <p>{description}</p>
    <div class="flex flex-row flex-wrap gap-x-4 gap-y-4 pt-3">
      {links?.map((l: any) => <TextLink {...l} />)}
    </div>
  </div>
</div>
